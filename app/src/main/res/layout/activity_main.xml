<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/bgColor"
        android:layout_gravity="bottom">

        <LinearLayout
            android:alpha="?attr/toolbarAlpha"
            android:background="?attr/toolbarBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="?attr/secondTextSize"
                android:textColor="?attr/toolbarTextColor"
                android:text="@string/toolbar_btn_home"/>

            <TextView
                android:id="@+id/btn_article"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="?attr/secondTextSize"
                android:textColor="?attr/toolbarTextColor"
                android:text="@string/toolbar_btn_article"/>

            <TextView
                android:id="@+id/btn_question"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="?attr/secondTextSize"
                android:textColor="?attr/toolbarTextColor"
                android:text="@string/toolbar_btn_question"/>

            <TextView
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="?attr/secondTextSize"
                android:textColor="?attr/toolbarTextColor"
                android:text="@string/toolbar_btn_settings"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
